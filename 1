/*
 * Following code prints the data of a 2D matrix in rotated format by 90 degree
 * clockwise. It does not change the matrix. 
 *
 * 
 * Output
 * ------
 *
 * 1 2 3 
 * 4 5 6 
 * 7 8 9 
 *
 * 7 4 1 
 * 8 5 2 
 * 9 6 3 
 *
 *
 * Author
 * ------
 *
 * pyav
 ******************************************************************************/

#include <stdio.h>

#define SUCCESS 0
#define FAILURE 1
#define ROWS 3
#define COLUMNS 3

int main (int argc, char *argv[])
{
	int a[ROWS][COLUMNS] = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
	int i, j;

	for (i = 0; i < ROWS; i++) {
		for (j = 0; j < COLUMNS; j++) {
			printf ("%d ", a[i][j]);
		}
		printf ("\n");
	}

	printf ("\n\n");

	for (i = 0; i < COLUMNS; i++) {
		for (j = ROWS-1; j >= 0; j--) {
			printf ("%d ", a[j][i]);
		}

		printf ("\n");
	}

	return SUCCESS;
}

